<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/whoisQuery"
            app:layout_constraintEnd_toStartOf="@+id/whoisSubmit"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:hint="@string/whois_query_hint" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="11dp"
            app:layout_constraintBottom_toTopOf="@+id/whoisResult" android:importantForAutofill="no" android:autoLink="none"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/whoisResult"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="72dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"/>
    <Button
            android:text="@string/whois_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/whoisSubmit"
            app:layout_constraintStart_toEndOf="@+id/whoisQuery" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/whoisResult"/>
</android.support.constraint.ConstraintLayout>